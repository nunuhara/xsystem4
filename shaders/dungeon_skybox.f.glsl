uniform samplerCube tex;

in vec3 tex_coord;
out vec4 frag_color;

void main() {
        // Flip Z because the coordinate system for cubemaps is left-handed.
        frag_color = texture(tex, vec3(tex_coord.xy, -tex_coord.z));
}
